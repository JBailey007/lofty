<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <h2 class="login-text formTitle text-center">Log In:</h2>
      <form class="form login-form">
        <div class="form-group">
          <label for="email-login" class="login-text">Email:</label>
          <input class="form-input form-control" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login" class="login-text">Password:</label>
          <input
            class="form-input form-control"
            type="password"
            id="password-login"
          />
        </div>
        <div class="form-group text-center">
          <button
            class="btn btn-primary"
            type="submit"
            style="background-color: goldenrod; border-color: rgb(169, 129, 26)"
          >Log In</button>
        </div>
      </form>
    </div>

    
    <div class="col-md-5">
      <h2 class="login-text formTitle text-center">Sign Up:</h2>
      <form class="form signup-form">
        <div class="form-group">
          <label for="email-signup" class="login-text">Email:</label>
          <input
            class="form-input form-control"
            type="text"
            id="email-signup"
          />
        </div>
        <div class="form-group">
          <label for="password-signup" class="login-text">Password:</label>
          <input
            class="form-input form-control"
            type="password"
            id="password-signup"
          />
        </div>
        <div class="form-group text-center">
          <button
            class="btn btn-primary submit"
            type="submit"
            style="background-color: goldenrod; border-color: rgb(169, 129, 26)"
          >Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>